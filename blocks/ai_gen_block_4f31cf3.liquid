{% doc %}
  @prompt
    i want gif, many gifs not only one, putonly 4 ggifs and make them in a animated way
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-gif-gallery-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
  }

  .ai-gif-gallery-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.gap }}px;
  }

  .ai-gif-item-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-gif-item-{{ ai_gen_id }}:hover {
    transform: scale({{ block.settings.hover_scale }});
    box-shadow: {{ block.settings.shadow_horizontal | times: 2 }}px {{ block.settings.shadow_vertical | times: 2 }}px {{ block.settings.shadow_blur | times: 1.5 }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | times: 1.5 }});
  }

  .ai-gif-item-{{ ai_gen_id }}:nth-child(1) {
    animation: ai-gif-float-{{ ai_gen_id }} 3s ease-in-out infinite;
  }

  .ai-gif-item-{{ ai_gen_id }}:nth-child(2) {
    animation: ai-gif-float-{{ ai_gen_id }} 3s ease-in-out infinite 0.5s;
  }

  .ai-gif-item-{{ ai_gen_id }}:nth-child(3) {
    animation: ai-gif-float-{{ ai_gen_id }} 3s ease-in-out infinite 1s;
  }

  .ai-gif-item-{{ ai_gen_id }}:nth-child(4) {
    animation: ai-gif-float-{{ ai_gen_id }} 3s ease-in-out infinite 1.5s;
  }

  @keyframes ai-gif-float-{{ ai_gen_id }} {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .ai-gif-item-{{ ai_gen_id }}:hover {
    animation-play-state: paused;
  }

  .ai-gif-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-gif-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: {{ block.settings.placeholder_bg_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-gif-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-gif-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 12px;
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
    white-space: nowrap;
  }

  @media screen and (max-width: 749px) {
    .ai-gif-gallery-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-gif-gallery-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
  }
{% endstyle %}

<div class="ai-gif-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-gif-gallery-grid-{{ ai_gen_id }}">
    {% for i in (1..4) %}
      {% liquid
        assign gif_key = 'gif_' | append: i
        assign gif = block.settings[gif_key]
      %}
      
      <div class="ai-gif-item-{{ ai_gen_id }}">
        {% if gif %}
          <img
            src="{{ gif | image_url }}"
            alt="{{ gif.alt | escape }}"
            class="ai-gif-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ gif.width }}"
            height="{{ gif.height }}"
          >
        {% else %}
          <div class="ai-gif-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-gif-empty-state-{{ ai_gen_id }}">
              Add GIF {{ i }}
            </div>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

